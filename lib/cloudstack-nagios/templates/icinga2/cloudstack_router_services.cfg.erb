
object CheckCommand "cs-nagios_check-memory" {
	import "plugin-check-command"
        command = [  "<%= bin_path -%>cs-nagios", "check", "router" ,"memory" ]

        arguments = {
        	"-H" = "$address$"
  		"-w" = "80"
  		"-c" = "90"
                "--ssh_key" = "<%= ssh_key %>"
 		"--ssh-port" = "<%= ssh_port %>"
		"--config" = "<%= config_file %>"
	}
}

