
<% system_vms.each do |vm| -%>
  <% if vm['privateip'] -%>
object Host "<%= vm['name'] %>" {
  import "generic-host"
  vars.os = "Linux"
  vars.os_family = "RedHat"
  address = "<%= vm['privateip'] %>"
  groups = [ "CloudstackSystemVm<%= '" , "CloudstackSSVM' if vm['systemvmtype'] == 'secondarystoragevm' %>" ]
}

  <% end -%>
<% end -%>
