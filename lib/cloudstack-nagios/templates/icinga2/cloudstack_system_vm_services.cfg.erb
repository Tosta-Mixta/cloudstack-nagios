
object CheckCommand "cs-nagios_check_systemvm-memory" {
	import "plugin-check-command"
        command = [ "<%= bin_path -%>cs-nagios check system_vm memory" ]
        arguments = {
                "-H" = "$address$"
                "-w" = "80"
                "-c" = "90"
		"--ssh-key" = "<%= ssh_key %>"
		"--ssh-port" =  "<%= ssh_port %>"
 		"--config" = "<%= config_file %>"
        }
}

